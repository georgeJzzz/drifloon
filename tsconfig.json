{
	"compilerOptions": {
		"rootDir": "./src",
		"baseUrl": "./src",
		"outDir": "./built",
		"allowJs": false,
		"target": "es2020",
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"lib": [
			"es2020",
			"dom"
		]
	},
	"include": ["src/**/*.ts"]
}
